{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Albums",
    "type": "array",
    "items": {
      "$ref": "#/$defs/Album"
    },
    "minItems": 1,
    "uniqueItems": true,
    "$defs": {
      "Album": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "name": {
            "description": "Name of the album",
            "type": "string"
          },
          "query": {
            "$ref": "#/$defs/Query"
          }
        },
        "required": [
          "name",
          "query"
        ]
      },
      "Query": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "country": {
            "anyOf": [
              {"type": "string"},
              {"type": "array", "items": {"type": "string"}, "uniqueItems": true}
            ]
          },
          "state": {
            "type": "string"
          },
          "city": {
            "type": "string"
          },
          "favorite": {
            "type": "boolean"
          },
          "people": {
            "anyOf": [
              {"type": "string"},
              {"type": "array", "items": {"type": "string"}, "uniqueItems": true}
            ]
          },
          "timespan": {
            "anyOf": [
              {"$ref": "#/$defs/Timespan"},
              {"type": "array", "items": {"$ref": "#/$defs/Timespan"}, "uniqueItems": true}
            ]
          }
        }
      },
      "Timespan": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "start": {
            "type": "string",
            "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
          },
          "end": {
            "type": "string",
            "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
          }
        },
        "required": [
          "start",
          "end"
        ]
      }
    }
  }
